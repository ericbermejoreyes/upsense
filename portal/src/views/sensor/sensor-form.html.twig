{% spaceless %}
    {% if new is not defined %}
        {% set new = 1 %}
    {% endif %}
    <form id="sensor-form">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" id="sensor-name" placeholder="Name*">
                    <div class="invalid-feedback" id="error-sensor-name"></div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <input type="text" name="serial" class="form-control" id="sensor-serial" placeholder="Serial*" {% if new == 0 %}disabled{% endif %}>
                    <div class="invalid-feedback" id="error-sensor-serial"></div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <select name="hub" class="form-control" id="sensor-hub">
                        <option value=0>Hub*</option>
                    </select>
                    <div class="invalid-feedback" id="error-sensor-hub"></div>
                </div>
            </div>
        </div>
        <div class="row no-gutters align-items-center pb-3">
            <div class="col">
                <hr/>
            </div>
            <div class="col-auto">
                <div class="mb-0 mr-3 ml-3 small">Temperature Limit</div>
            </div>
            <div class="col">
                <hr/>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="sr-only" for="sensor-minTemp"></label>
                    <div class="input-group mb-2 mr-sm-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text">Min Temp</div>
                        </div>
                        <input type="text" name="minTemp" class="form-control" id="sensor-minTemp" placeholder="-">
                        <div class="invalid-feedback" id="error-sensor-minTemp"></div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="sr-only" for="sensor-maxTemp"></label>
                    <div class="input-group mb-2 mr-sm-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text">Max Temp</div>
                        </div>
                        <input type="text" name="maxTemp" class="form-control" id="sensor-maxTemp" placeholder="-">
                        <div class="invalid-feedback" id="error-sensor-maxTemp"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-end">
            <a href="/devices/sensor/list" type="submit" class="btn btn-outline-dark mnw-100 mr-2">Cancel</a>
            <button type="submit" class="btn btn-primary mnw-100">Save</button>
        </div>
        {% if id is defined %}
            <input type="hidden" id="data-id" value="{{ id }}">
        {% endif %}
    </form>
{% endspaceless %}
